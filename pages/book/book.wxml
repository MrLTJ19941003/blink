<!--pages/book/book.wxml-->

<view class='container'>
  <view class='header'>
    <view class='box' bindtap=''>
      <image src='/images/icon/search.png' />
      <text>搜索书籍</text>
    </view>
  </view>
  <view class='sub-container'>
    <image class='head-img' src='/images/book/quality.png'/>
    <view class='sub-list'>
      <block wx:for='{{books}}'>
        <l-book book='{{item}}'/>
      </block>
    </view>
  </view>
</view>

